<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Shinkuro.Resources.Styles"
                    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Style TargetType="TextBlock" x:Key="HeaderPageCompetition">
        <Setter Property="FontSize" Value="16"></Setter>
        <Setter Property="FontWeight" Value="DemiBold"></Setter>
        <Setter Property="VerticalAlignment" Value="Bottom"></Setter>
    </Style>

    <Style TargetType="TextBlock" x:Key="MenuButtonStyle">
        <Setter Property="FontSize" Value="11"></Setter>
        <Setter Property="Foreground" Value="#FF5B25BB"></Setter>
        <Setter Property="TextWrapping" Value="Wrap"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
    </Style>

    <Style x:Key="MenuIcon" TargetType="md:PackIcon">
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="Foreground" Value="#FF5B25BB"></Setter>
        <Setter Property="Margin" Value="0"></Setter>
    </Style>
    
</ResourceDictionary>